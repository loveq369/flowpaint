<flowpaint version="1.0">

  <gradient name ="greyBlack">
    <gradientPoint position="0">
      <num name="red">0</num>
      <num name="green">0</num>
      <num name="blue">0</num>
      <num name="alpha">1</num>
    </gradientPoint>
    <gradientPoint position="1">
      <num name="red">0.5</num>
      <num name="green">0.5</num>
      <num name="blue">0.5</num>
      <num name="alpha">1</num>
    </gradientPoint>
  </gradient>


  <brush name ="Pencil" description ="A simple pencil" >
    <settings>

      <num name="maxRadius">40</num>
      <num name="alpha">1</num>


    </settings>

    <pathProcessors>

      <processor type ="org.flowpaint.filters.ZeroLengthSegmentFilter">
      </processor>

      <processor type ="org.flowpaint.filters.DistanceCalculatorFilter">
      </processor>

      <processor type ="org.flowpaint.brush.StrokeAngleTilter">
        <num name="tilt">0.5</num>
      </processor>

      <processor type ="org.flowpaint.filters.RadiusFromPressureFilter">
        <num name="maxRadius">30</num>
        <num name="pressureEffect">1</num>
      </processor>

      <processor type ="org.flowpaint.filters.StrokeEdgeCalculatorFilter">
      </processor>

    </pathProcessors>

    <pixelProcessors>
      <processor type ="org.flowpaint.ink.GradientInk">
        <num name="alphaPressure">1</num>
        <ref name="gradient"  type="Gradient">greyBlack</ref>
      </processor>
    </pixelProcessors>

    <editors>

    </editors>
  </brush>


  <brushset name="Sketching">
    <ref type="Brush">Pencil</ref>
  </brushset>


</flowpaint>